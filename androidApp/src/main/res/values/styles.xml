<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBackground">
        <item name="background">@color/calcashflow_color_primary</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">@dimen/calcashflow_text_size_extra_large</item>
    </style>

    <style name="TextHeader.White">
        <item name="android:textColor">@color/calcashflow_color_white</item>
    </style>

    <style name="CalCashFlow" />

    <style name="CalCashFlow.Default" />

    <style name="CalCashFlow.Default.Text" />

    <style name="CalCashFlow.Default.Text.White">
        <item name="android:textColor">@color/calcashflow_color_white</item>
    </style>

    <style name="TextHeader2" parent="CalCashFlow.Default.Text.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/calcashflow_text_size_large</item>
    </style>

    <style name="TextContent" parent="CalCashFlow.Default.Text.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/calcashflow_text_size_normal</item>
    </style>

    <style name="PlieCardView">
        <item name="android:background">@drawable/calcashflow_shape_gradient_primary_30</item>
    </style>

    <style name="TextInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/calcashflow_color_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:editTextColor">@color/calcashflow_color_white</item>
        <item name="android:textColorHint">@color/calcashflow_color_white</item>
        <item name="hintTextColor">@color/calcashflow_color_white</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">#ff0266</item>
    </style>
</resources>